{
    "name": "buco-backend",
    "version": "1.0.0",
    "description": "Backend server for Buco package version management",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "build": "npm run build:dir && npm run build:copy",
        "build:dir": "node -e \"require('fs').mkdirSync('../build', { recursive: true })\"",
        "build:copy": "npx cpy server.js package.json ../build"
    },
    "dependencies": {
        "axios": "^1.5.0",
        "cors": "^2.8.5",
        "dockerode": "^3.3.5",
        "express": "^4.18.2",
        "fs-extra": "^11.1.1",
        "mqtt": "^4.3.7",
        "multer": "^1.4.5-lts.1"
    },
    "devDependencies": {
        "cpy-cli": "^4.2.0",
        "nodemon": "^3.0.1"
    }
}
